<div class="w-full">
<%= render 'notice' %>

<h1 class="font-bold text-xl mb-6 pb-2 border-b-2">
  Your Pragmatic Catalog
</h1>

<% unless (defined?current_product_add) %>
  <% current_product_add = false %>
<% end %>

<%= turbo_stream_from 'store/products' %>

<ul>
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <%= render partial: 'product', object: product, locals: {current_product_add: current_product_add} %>
      <% end %>
    <% end %>
  <% end %>
</ul>
</div>